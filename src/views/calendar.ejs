
<link rel="stylesheet" href="/css/calendar.css">
<script type="module" src="/js/agenda/agenda.js"></script>
<script type="module" src="js/websocket.js"></script>

<!-- Modale pour les details de l'evenement -->
<%- include('partials/modals/eventDetails') %>

<!-- Modale pour modifier les informations de l'événement -->
<div id="eventModal" class="modal">
    <div class="modal-content">
        <span class="close close-btn">&times;</span>
        <h2>Modifier l'événement</h2>
        <label for="eventTitle">Titre : <span class="requis">*</span></label>
        <input type="text" id="eventTitle" class="input-field" />

        <label for="eventDetails">Détails :</label>
        <textarea id="eventDetails" class="input-field"></textarea>

        <label for="startEventTime">Date de début : <span class="requis">*</span></label>
        <input type="datetime-local" id="startEventTime" class="input-field" />

        <div style="display: flex; align-items: center;">
            <label for="eventAllDay">Toute la journée :</label>
            <input type="checkbox" id="eventAllDay" style="margin-top: 12px; margin-left: 5px;" name="eventAllDay" />
        </div>

        <div style="display: flex; align-items: center;">
            <label for="eventRecurrence">Se répète :</label>
            <select name="eventRecurrence" id="eventRecurrence" style="margin-top: 12px; margin-left: 5px; width:200px;" <% if(cantEdit) {%> disabled <%}%>>
                <option value="4">Jamais</option>
                <option value="0">Tous les jours</option>
                <option value="1">Toutes les semaines</option>
                <option value="2">Tous les mois</option>
                <option value="3">Tous les ans</option>
                <option value="5">Custom</option>
            </select>
        </div>

        <div id="showRecurrenceOptionsEdit" style="display: none; align-items: center;">
            <label for="eventRecurrenceCustom">Répéter tous les :</label><input type="number" id="eventRecurrenceInterval" name="eventRecurrenceInterval" style="margin-top: 12px; margin-left: 5px; width:50px;" min="1" max="30" value="2">
            <select name="eventRecurrenceCustom" id="eventRecurrenceCustom" style="margin-top: 12px; margin-left: 5px; width:200px;">
                <option value="0" selected>Jours</option>
                <option value="1">Semaines</option>
                <option value="2">Mois</option>
                <option value="3">Ans</option>lect>
        </div>

        <label for="endEventTime">Date de fin : <span class="requis">*</span></label>
        <input type="datetime-local" id="endEventTime" class="input-field" />
        <label id="error-update-event" class="form-label text-danger"></label>

        <div id="optionApplyToAll" style="display: none; align-items: center;">
            <label for="applyToAllOccurrences">Appliquer à toutes les occurrences de cet événement :</label>
            <input type="checkbox" id="applyToAllOccurrences" name="applyToAllOccurrences" style="margin-top: 12px; margin-left: 5px;"><br><br>
        </div>

        <!-- Boutons pour enregistrer ou annuler -->
        <button id="updateEvent">Enregistrer les modifications</button>
        <button id="deleteEvent">Supprimer l'événement</button>
    </div>
</div>

<%- include('partials/modals/newEvent') %>

<!-- Met l'agendaId dans les data -->
<%- include('partials/slidingPanel') %>

